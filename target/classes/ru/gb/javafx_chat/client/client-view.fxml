<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox alignment="CENTER" spacing="5.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="ru.gb.javafx_chat.client.ChatController">
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
    </padding>

    <TextArea fx:id="messageArea"  editable="false" wrapText="true" VBox.vgrow="ALWAYS" prefColumnCount="2" />

    <HBox spacing="5">
        <TextField fx:id="messageField" HBox.hgrow="ALWAYS"/>
        <ComboBox fx:id="mySmile" promptText="Смайлы" prefWidth="100.0" />
        <Button text="Send" defaultButton="true" onAction="#ClickSendButton"/>

    </HBox>

</VBox>
